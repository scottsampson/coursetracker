<h1>User Stats.</h1>

<table>
  <tr>
    <th>User</th>
    <th>Beginner</th>
    <th>Intermediate</th>
    <th>Expert</th>
    <th>Exercises</th>
  </tr>
<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.known_beginner.length %>/<%= @total_beginner %></td>
    <td><%= user.known_intermediate.length %>/<%= @total_intermediate %></td>
    <td><%= user.known_expert.length %>/<%= @total_expert %></td>
    <td><%= user.finished_exercises.collect{|fe| fe if fe.finished}.compact.length %>/<%= @total_exercises %></td>
  </tr>
<% end %>
</table>

