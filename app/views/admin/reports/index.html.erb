<h1>Courses that need to be learned.</h1>

<table cellpadding='5' cellspacing='1'>
<% level_name = "" %>
<% @courses.each do |course| %>
  <% if course[2] != level_name %>
    <tr>
        <th colspan='2' style='text-align:left;'><br /><br /><%= course[2] %><br /><br /></th>
    </tr>
    <tr>
      <th>Title</th>
      <th># don't know</th>
    </tr>
    <% level_name = course[2] %>
  <% end %>
  <tr>
    <td><%= course[0] %></td>
    <td><%= course[1] %></td>
  </tr>
<% end %>
</table>

