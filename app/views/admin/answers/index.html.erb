<% @answers.each do |answer| %>
  <tr>
    <td><%= answer.project_id %></td>
    <td><%= answer.question_id %></td>
    <td><%= answer.answer %></td>
    <td><%= link_to 'Show', [:admin,answer] %></td>
    <td><%= link_to 'Edit', edit_admin_answer_path(answer) %></td>
    <td><%= link_to 'Destroy',  [:admin,answer], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

