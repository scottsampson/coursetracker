<h1>Listing courses</h1>
<%= link_to 'New Course', new_admin_course_path %> | 
<%= link_to 'Re-order Courses', admin_courses_reorder_path %>
<table>
  <tr>
    <th>Name</th>
    <th>Target</th>
    <th>Level</th>
    <th>Order</th>
    <th>Resources</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.target.name %></td>
    <td><%= course.level.name %></td>
    <td><%= course.order_num %></td>
    <td><%= link_to 'Resources', admin_resources_path(:course_id => course.id) %></td>
    <td><%= link_to 'Show', [:admin,course] %></td>
    <td><%= link_to 'Edit', edit_admin_course_path(course) %></td>
    <td><%= link_to 'Destroy', [:admin,course], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

