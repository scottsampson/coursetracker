  </div> -->
  <div class="field">
    <%= f.label :level_id %><br />
    <%= f.select :level_id, options_for_select([['Choose One',0]] + (@levels.collect{|l| [l.name,l.id]}.sort),@course.level_id) %>
  </div>
  <!-- <div class="field">
    <%= f.label :level_id %><br />
    <%= f.text_field :level_id %>
  </div> -->
  <div class="field">
    <%= f.label :order_num %><br />
    <%= f.select :order_num, options_for_select(@level_options,@course.order_num) %>
  </div>  
  <div class="actions">
    <%= f.submit %>
  </div>
