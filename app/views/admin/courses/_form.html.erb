<%= form_for([:admin,@course]) do |f| %>
  <% if @course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
      <% @course.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :target_id %><br />
    <%= f.select :target_id, options_for_select(@targets.collect{|t| [t.name,t.id]}.sort,@course.target_id) %>
  </div>
  
  <!-- <div class="field">
    <%= f.label :target_id %><br />
