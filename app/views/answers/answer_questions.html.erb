<h1>Answer Questions</h1>

<p>Please answer the questions below about <%= @project.name %></p>


<%= form_for(@answer, :url => answers_save_answers_path()) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

      <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <% @questions.each_with_index do |question,index| %>
    <div class="field">
      <%= f.label (index + 1).to_s + ") " + question.question %><br />
      <%= text_area_tag "question_ids[" + question.id.to_s + "]", '',:cols => 40, :rows => 10 %>
    </div>  
  <% end %>
  
  <div class="actions">
    <%= f.submit 'Submit Answers' %>
  </div>
  <%= hidden_field_tag 'project_id',@project.id %>
<% end %>
